@model login.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "bledne logowanie");
    <div>
        <fieldset>
            <legend>Logowanie</legend>
            <div class="editor-label">@Html.LabelFor(u => u.Email)</div>
            <div class="editor-label">@Html.TextBoxFor(u => u.Email)
            @Html.ValidationMessageFor(u => u.Email)
        </div>
            <div class="editor-label">@Html.LabelFor(u => u.Password)</div>
            <div class="editor-field">@Html.PasswordFor(u => u.Password)
            @Html.ValidationMessageFor(u => u.Password)
        </div>
            <input type="submit" value="Loguj"/>
        </fieldset>
    </div>

}

